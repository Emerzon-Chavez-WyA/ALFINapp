@model List<ALFINapp.Models.Usuario>

@{
}

@section Styles {
    <link rel="stylesheet" href="~/css/main_page.css">
    <link rel="stylesheet" href="~/css/Usuarios/Administracion.css">
}

<div>
    <div class="mb-2">
        <h3> Administracion de Usuarios </h3>
        <div class="alert alert-primary" role="alert">
            <p>En esta sección podra administrar los usuarios de la plataforma A365. Aca podra <strong>editar, desactivar y eliminar</strong> usuarios.</p>
        </div>
        <div class="d-flex flex-column flex-md-row align-items-md-center">
            <label for="searchField" class="form-label mb-2 mb-md-0 me-md-2">
                Buscar por:
            </label>
            <select id="searchField" class="form-control me-md-2">
                <option value="nombres">Nombres</option>
                <!--<option value="apellidoMaterno">Apellido Materno</option>
                <option value="nombre">Nombre</option>-->
                <option value="dniadm">DNI</option>
                <option value="rol">Rol</option>
            </select>
            <input type="text" class="form-control" id="searchInput" placeholder="Ingrese valor de búsqueda">
            <select class="form-control" name="rolFiltro" id="rolFiltro" style="display: none;" onchange="filtrarPorRol(this.value);">
                <option value="">Seleccione un Rol</option>
                <option value="1">1 - ADMINISTRADOR</option>
                <option value="2">2 - SUPERVISOR</option>
                <option value="3">3 - ASESOR DE CREDITOS</option>
                <option value="4">4 - JEFE DE ZONA</option>
            </select>
            <!-- Campos de fecha (inicial y final), ocultos por defecto -->
            <input type="date" class="form-control mt-2" id="startDate" style="display: none;"
                placeholder="Fecha Inicial">
            <input type="date" class="form-control mt-2" id="endDate" style="display: none;"
                placeholder="Fecha Final">
        </div>
    </div>
    <div class="table-responsive">

        <table class="table table-bordered text-nowrap" id="clientesTable">
            <thead>
                <tr>
                    <th>Acción</th>
                    <th onclick="sortTable('clientesTable', 1, 'string')" style="cursor: pointer">
                        <span class="d-flex justify-content-center gap-2 ">
                            Estado
                            <i class="bi bi-filter"></i>
                        </span>
                    </th>
                    <th>Dni</th>
                    <th>Nombres Completos</th>
                    <th>Supervisor Asignado</th>
                    <th>Región</th>
                    <th>Nombre Campaña</th>
                    <th>Id Rol</th>
                    <th>Rol</th>
                    <th>Última actualización</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var usuario in Model)
                {
                    <tr class="align-middle">
                        <td>
                            <div class="d-flex flex-column align-items-center">
                                <div class="d-flex justify-content-center gap-2 mb-2">
                                    <a href="javascript:void(0)" class="btn btn-warning btn-sm"
                                       onclick="CambiarEstadoUsuario(0, '@usuario.IdUsuario');">
                                        <i class="bi bi-toggle-off"></i>
                                    </a>
                                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalEditarUsuario">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td>
                            @if (usuario.Estado == "ACTIVO")
                            {
                                <span class="badge bg-success">@usuario.Estado</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@usuario.Estado</span>
                            }
                        </td>
                        <td>
                            @usuario.Dni
                        </td>
                        <td>
                            @usuario.NombresCompletos
                        </td>
                        <td>
                            -
                        </td>
                        <td>
                            @usuario.REGION
                        </td>
                        <td>
                            @usuario.NOMBRECAMPAÑA
                        </td>
                        <td>
                            @usuario.IdRol - @usuario.Rol
                        </td>
                        <td>
                            @usuario.Rol
                        </td>
                        <td>
                            @usuario.FechaActualizacion
                        </td>
                    </tr>
                }


            </tbody>

        </table>

    </div>
</div>


<!-- Modal :: Editar Usuario -->
<div class="modal fade" id="modalEditarUsuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-5 col-form-label">Estado</label>
                    <div class="col-7">
                        <select class="form-select" id="selectEstado_EU">
                            <option value="activo">ACTIVO</option>
                            <option value="inactivo">INACTIVO</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-5 col-form-label">DNI</label>
                    <div class="col-7">
                        <input type="email" class="form-control" id="txtDNI_EU" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-5 col-form-label">Nombre Completo</label>
                    <div class="col-7">
                        <input type="email" class="form-control" id="txtNombreCompleto_EU" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-5 col-form-label">Supervisor Asignado</label>
                    <div class="col-7">
                        <input type="email" class="form-control" id="txtSupervisorAsignado_EU" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-5 col-form-label">Región</label>
                    <div class="col-7">
                        <input type="email" class="form-control" id="txtRegion_EU" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-5 col-form-label">Nombre Campaña</label>
                    <div class="col-7">
                        <input type="email" class="form-control" id="txtNombreCampania_EU" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-5 col-form-label">Id Rol</label>
                    <div class="col-7">
                        <input type="email" class="form-control" id="txtIdRol_EU" />
                    </div>
                </div>
                <div class="row">
                    <label for="inputEmail3" class="col-5 col-form-label">Rol</label>
                    <div class="col-7">
                        <input type="email" class="form-control" id="txtRol_EU" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/Usuarios/Administracion.js"></script>
}