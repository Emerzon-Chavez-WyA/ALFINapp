    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sidebar = document.getElementById('sidebar');
            const toggle = document.getElementById('sidebarToggle');
            let expandedByHover = false;

            function isDesktop() {
                return window.innerWidth >= 992;
            }

            // Manejo del hover para expandir/contraer el sidebar
            sidebar.addEventListener('mouseenter', () => {
                if (!isDesktop()) return;
                if (!toggle.checked) {
                    console.log('Expanding sidebar on hover'); // Depuración
                    toggle.checked = true;
                    expandedByHover = true;
                }
            });

            sidebar.addEventListener('mouseleave', () => {
                if (!isDesktop()) return;
                if (expandedByHover) {
                    console.log('Collapsing sidebar on mouseleave'); // Depuración
                    toggle.checked = false;
                    expandedByHover = false;
                }
            });

            // Evitar que el hover interfiera cuando se expande manualmente
            document.getElementById('toggleSidebar').addEventListener('click', () => {
                expandedByHover = false;
            });

            // Manejo de la clase "active" para nav-links que no son toggles
            document.querySelectorAll('#sidebar .nav-link:not([data-bs-toggle="collapse"])').forEach(link => {
                link.addEventListener('click', function () {
                    document.querySelectorAll('#sidebar .nav-link').forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                    // Mantener "active" en toggles de collapses ancestros
                    let parentCollapse = this.closest('.collapse');
                    while (parentCollapse) {
                        const toggleLink = document.querySelector(
                            `[data-bs-toggle="collapse"][href="#${parentCollapse.id}"], [data-bs-toggle="collapse"][data-bs-target="#${parentCollapse.id}"]`
                        );
                        if (toggleLink) toggleLink.classList.add('active');
                        parentCollapse = parentCollapse.parentElement.closest('.collapse');
                    }
                });
            });

            // Manejo de la clase "active" para collapses
            document.querySelectorAll('#sidebar .nav-link[data-bs-toggle="collapse"]').forEach(toggleLink => {
                const collapseId = toggleLink.getAttribute('href') || toggleLink.getAttribute('data-bs-target');
                const collapse = document.querySelector(collapseId);
                if (collapse) {
                    collapse.addEventListener('show.bs.collapse', () => {
                        toggleLink.classList.add('active');
                    });
                    collapse.addEventListener('hide.bs.collapse', () => {
                        // Solo remover "active" si no hay submenús activos dentro
                        if (!collapse.querySelector('.nav-link.active')) {
                            toggleLink.classList.remove('active');
                        }
                    });
                }
            });
        });
    </script>



    <script>
        document.addEventListener("DOMContentLoaded", function () {
            $.ajax({
                url: '/Rol/Sidebar',
                type: 'GET',
                success: function (response) {
                    if (response.success === false) {
                        Swal.fire({
                            title: 'Error',
                            text: response.message,
                            icon: 'error',
                            confirmButtonText: 'Aceptar'
                        });
                        return;
                    } else {
                        $('#sidebarToggleRender').html(response); // Asegúrate de que el servidor retorne el HTML correcto
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error en la petición AJAX:");
                    console.error("Estado:", status);
                    console.error("Error:", error);
                    console.error("Respuesta del servidor:", xhr.responseText);

                    Swal.fire({
                        title: 'Error',
                        text: xhr.responseText || 'Error desconocido',
                        icon: 'error',
                        confirmButtonText: 'Aceptar'
                    });
                }
            });
        });
    </script>


