@model ALFINapp.API.Models.ViewUsuario
@{
}

@section Styles {
    <link rel="stylesheet" href="~/css/main_page.css">
}

<div class="container mt-4">
    <div class="row">
        <h3>Bienvenido @Model.NombresCompletos</h3>
        <div class="alert alert-info" role="alert">
            En esta Sección podrá modificar su contraseña y otros datos.
        </div>
        <div class="col-md-6">
            <div class="form-group mb-2">
                <label for="NombresCompletosUsuario" class="form-label mb-1">Nombres Completos del Usuario</label>
                <input type="text" class="form-control" id="NombresCompletosUsuario" value="@Model.NombresCompletos"
                    readonly>
            </div>
            <div class="form-group mb-2">
                <label for="DniUsuario" class="form-label mb-1">DNI del Usuario</label>
                <input type="text" class="form-control" id="DniUsuario" value="@Model.Dni" readonly>
            </div>
            <div class="form-group mb-2">
                <div class="alert alert-warning" id="AlertUpdateCorreo" style="display: none;">
                    Actualizar el Correo
                </div>
                <label for="CorreoUsuario" class="form-label">Correo</label>
                <div class="row">
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="CorreoUsuario" value="@Model.Correo" readonly>
                    </div>
                    <div class="col-md-2">
                        <a href="javascript:void(0)" id="CorreoBotonEdicion" class="btn btn-primary"
                            onclick="activarEdicion('Correo')" style="display: block;"><i class="bi bi-pencil"></i></a>
                        <a href="javascript:void(0)" id="CorreoBotonEnvio" class="btn btn-success"
                            onclick="enviarEdicion('Correo')" style="display: none;"><i class="bi bi-check"></i></a>
                    </div>
                </div>
            </div>
            <div class="form-group mb-2">
                <label for="ContrasenaUsuario" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="ContrasenaUsuario" value="@Model.contraseña"
                    class="form-control" readonly>
            </div>
            <div class="form-group mb-2">
                <div class="row mb-2" style="display: none;" id="AlertUpdatePassword">
                    <div class="col-md-12">
                        <div class="alert alert-warning">
                            Actualizar la contraseña
                        </div>
                    </div>
                    <label for="ContrasenaNueva" class="form-label mb-1">Ingrese la nueva contraseña</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" id="ContrasenaNueva">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a href="javascript:void(0)" onclick="updatePasswordView(@Model.IdUsuario)"
                            class="btn btn-primary" id="UpdatePasswordButtonView" style="display: block;">Actualizar
                            Contraseña</a>
                        <a href="javascript:void(0)" onclick="updatePasswordSubmit(@Model.IdUsuario)"
                            class="btn btn-success" id="UpdatePasswordButtonSubmit" style="display: none;">Ingrese la
                            nueva
                            Contraseña</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-2">
                <div class="alert alert-warning" id="AlertUpdateDepartamento" style="display: none;">
                    Actualizar el Departamento
                </div>
                <label for="DepartamentoUsuario" class="form-label">Departamento</label>
                <div class="row">
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="DepartamentoUsuario" value="@Model.Departamento"
                            readonly>
                    </div>
                    <div class="col-md-2">
                        <a href="javascript:void(0)" id="DepartamentoBotonEdicion" class="btn btn-primary"
                            onclick="activarEdicion('Departamento')" style="display: block;"><i
                                class="bi bi-pencil"></i></a>
                        <a href="javascript:void(0)" id="DepartamentoBotonEnvio" class="btn btn-success"
                            onclick="enviarEdicion('Departamento')" style="display: none;"><i
                                class="bi bi-check"></i></a>
                    </div>
                </div>
            </div>
            <div class="form-group mb-2">
                <div class="alert alert-warning" id="AlertUpdateProvincia" style="display: none;">
                    Actualizar la Provincia
                </div>
                <label for="ProvinciaUsuario" class="form-label">Provincia</label>
                <div class="row">
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="ProvinciaUsuario" value="@Model.Provincia" readonly>
                    </div>
                    <div class="col-md-2">
                        <a href="javascript:void(0)" id="ProvinciaBotonEdicion" class="btn btn-primary"
                            onclick="activarEdicion('Provincia')" style="display: block;"><i
                                class="bi bi-pencil"></i></a>
                        <a href="javascript:void(0)" id="ProvinciaBotonEnvio" class="btn btn-success"
                            onclick="enviarEdicion('Provincia')" style="display: none;"><i class="bi bi-check"></i></a>
                    </div>
                </div>
            </div>
            <div class="form-group mb-2">
                <div class="alert alert-warning" id="AlertUpdateDistrito" style="display: none;">
                    Actualizar el Distrito
                </div>
                <label for="DistritoUsuario" class="form-label">Distrito</label>
                <div class="row">
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="DistritoUsuario" value="@Model.Distrito" readonly>
                    </div>
                    <div class="col-md-2">
                        <a href="javascript:void(0)" id="DistritoBotonEdicion" class="btn btn-primary"
                            onclick="activarEdicion('Distrito')" style="display: block;"><i
                                class="bi bi-pencil"></i></a>
                        <a href="javascript:void(0)" id="DistritoBotonEnvio" class="btn btn-success"
                            onclick="enviarEdicion('Distrito')" style="display: none;"><i class="bi bi-check"></i></a>
                    </div>
                </div>
            </div>

            <div class="form-group mb-2">
                <div class="alert alert-warning" id="AlertUpdateTelefono" style="display: none;">
                    Actualizar el Telefono
                </div>
                <label for="TelefonoUsuario" class="form-label">Teléfono</label>
                <div class="row">
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="TelefonoUsuario" value="@Model.Telefono" readonly>
                    </div>
                    <div class="col-md-2">
                        <a href="javascript:void(0)" id="TelefonoBotonEdicion" class="btn btn-primary"
                            onclick="activarEdicion('Telefono')" style="display: block;"><i
                                class="bi bi-pencil"></i></a>
                        <a href="javascript:void(0)" id="TelefonoBotonEnvio" class="btn btn-success"
                            onclick="enviarEdicion('Telefono')" style="display: none;"><i class="bi bi-check"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/Perfil/Perfil.js?v=@DateTime.Now.Ticks"></script>
}