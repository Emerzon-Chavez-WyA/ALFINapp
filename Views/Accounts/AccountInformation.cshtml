@model ALFINapp.Models.Usuario
@{
    int? RolUser = ViewData["RolUser"] as int?;
    if (RolUser == 1)
    {
        Layout = "~/Views/Shared/_LayoutVendedor.cshtml";
    }
    else if (RolUser == 2)
    {
        Layout = "~/Views/Shared/_LayoutSupervisor.cshtml";
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/main_page.css">
}
<div class="container-fluid mt-4">
    <div class="row mb-2">
        <h3>Bienvenido @Model.NombresCompletos</h3>
        <div class="alert alert-info" role="alert">
            En esta Sección podrá modificar su contraseña y otros datos.
        </div>
        <div class="form-group">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="NombresCompletosUsuario" class="form-label">Nombres Completos del Usuario</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="NombresCompletosUsuario" value="@Model.NombresCompletos"
                        readonly>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="DniUsuario" class="form-label">DNI del Usuario</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="DniUsuario" value="@Model.Dni" readonly>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="ContrasenaUsuario" class="form-label">Contraseña</label>
                </div>
                <div class="col-md-8">
                    <input type="password" class="form-control" id="ContrasenaUsuario" value="@Model.contraseña"
                        class="form-control" readonly>
                </div>
                
            </div>

            <div class="row mb-3" style="display: none;" id="AlertUpdatePassword">
                <div class="col-md-4">
                    <label for="ContrasenaNueva" class="form-label">Ingrese la nueva contraseña</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="ContrasenaNueva" >
                </div>
                <div class="alert alert-warning mt-4">
                    Puede actualizar la contraseña
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <a href="javascript:void(0)" onclick="updatePasswordView(@Model.IdUsuario)" class="btn btn-primary"
                        id="UpdatePasswordButtonView" style="display: block;">Actualizar Contraseña</a>
                    <a href="javascript:void(0)" onclick="updatePasswordSubmit(@Model.IdUsuario)"
                        class="btn btn-success" id="UpdatePasswordButtonSubmit" style="display: none;">Ingrese la nueva
                        Contraseña</a>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
}