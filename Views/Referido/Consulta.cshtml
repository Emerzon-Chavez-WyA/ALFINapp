@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/main_page.css">
}

<div class="container flex-grow-1 d-flex justify-content-center align-items-center">
    <div class="position-absolute top-0 end-0 m-3" style="color: #2d5792;">
        <a class="btn btn-primary" style="background-color: #2d5792;" href="@Url.Action("Index", "Home")">Volver</a>
    </div>
    <div class="container mt-4">
        <div class="p-4 rounded" style="background-color: #2d5792; color: white;">
            <h3>Consulta de Cliente</h3>
            <div class="alert alert-info mt-4" role="alert">
                <strong>Consulta:</strong> Ingrese su DNI para consultar el estado de sus clientes referidos
            </div>
            <div id="dni-section" class="mb-4">
                <div class="form-group">
                    <label class="mb-1" for="DNI"> Ingrese su DNI </label>
                    <input type="text" id="referidosDeDNI" class="form-control" placeholder="Ingrese DNI">
                    <button id="consultar-dni" class="btn btn-primary mt-4"
                        onclick="BuscarReferidosDeDNI('referidosDeDNI')">Consultar</button>
                </div>
            </div>
            <div id="divReferidos" style="display: none;">
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Referido/Consulta.js"></script>
}