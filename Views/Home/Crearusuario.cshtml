@model ALFINapp.Models.DNIUserModel

@{
    ViewBag.Title = "Crear Usuario";
}

<h1>Crear Usuario</h1>

<form method="post">
    <div class="form-group">
        <label for="dni">DNI</label>
        <input type="text" id="dni" name="dni" class="form-control" value="@Model.dni" required />
        @if (ViewData.ModelState["dni"] != null)
        {
            <span style="color: red;">@ViewData.ModelState["dni"]?.Errors[0]?.ErrorMessage</span>
        }
    </div>

    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" id="nombre" name="nombre" class="form-control" value="@Model.nombre" />
    </div>

    <div class="form-group">
        <label for="rol">Rol</label>
        <input type="text" id="rol" name="rol" class="form-control" value="@Model.rol" />
    </div>

    <div class="form-group">
        <label for="departamento">Departamento</label>
        <input type="text" id="departamento" name="departamento" class="form-control" value="@Model.departamento" />
    </div>

    <div class="form-group">
        <label for="provincia">Provincia</label>
        <input type="text" id="provincia" name="provincia" class="form-control" value="@Model.provincia" />
    </div>

    <div class="form-group">
        <label for="distrito">Distrito</label>
        <input type="text" id="distrito" name="distrito" class="form-control" value="@Model.distrito" />
    </div>

    <div class="form-group">
        <label for="telefono">Tel√©fono</label>
        <input type="text" id="telefono" name="telefono" class="form-control" value="@Model.telefono" />
    </div>

    <div class="form-group">
        <label for="fecha_registro">Fecha de Registro</label>
        <input type="date" id="fecha_registro" name="fecha_registro" class="form-control" value="@Model.fecha_registro?.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label for="estado">Estado</label>
        <input type="text" id="estado" name="estado" class="form-control" value="@Model.estado" />
    </div>

    <button type="submit" class="btn btn-primary">Crear Usuario</button>
</form>
